<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <title>Redirecting ...</title>
</head>
<script>
    let remainingSec = 10;
    
    window.setInterval(() => {
        if (remainingSec >= 0) {
            document.getElementById("sec").innerText = "Your link will be ready in " + remainingSec + " seconds."
            remainingSec -= 1
        } else {
            document.getElementById("but").innerHTML = `<a class='btn btn-outline-danger mt-2 mb-2' href='<%= url %>'>GO TO LINK</a>`
        }
    }, 1000)
</script>
<body>
    <div class="container">
    <div class="card mt-2 shadow ">
        <p id="sec" class="my-auto mx-auto"></p>
    </div>
    <div id="ad" class="card shadow mt-2 h-25 d-flex justify-content-center align-items-center">
        <img src="https://t3.ftcdn.net/jpg/00/66/57/00/360_F_66570044_uOKC8lOpv8PxHWYBBeFmu1iKD3IGCLhw.jpg" alt="your ad here" width="500" height="500">
    </div>
    <div class="card shadow mt-2 d-flex justify-content-center align-items-center" id="but">
        
    </div>
</div>
</body>

</html>
